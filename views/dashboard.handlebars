<section class="new-post-section">
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label class="pt" for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">Content</label>
            <input id="post-content" name="post-content" />
        </div>
        <button class="cpb" type="submit">Create</button>
    </form>
</section>

{{#if posts.length}}
<section class="your-posts">
    <h2>Your Posts</h2>
    <div class="post-list">
        {{#each posts as |post|}}
        <div class="post">
            {{> post-info post}}
            <div class="edit-btn-div">
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </div>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>