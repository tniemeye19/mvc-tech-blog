<article class="edit-post">
    <a class="btd" href="/dashboard"> &larr; Back to dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <span>{{post.post_content}}</span>
        </div>
        <div>
            You created this on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button class="spb" type="submit">Save Post</button>
        <button class="dpb" type="button">Delete Post</button>
    </form>
</article>

<form>
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button class="acb" type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>